<h1>Project Management Tool</h1>

<h2>Create a new person</h2>

{{#if logged_in}}
  <form action="/people/create" method="POST">
    <input type="text" name="name">

    <input type="submit">
  </form>
{{/if}}

{{#unless logged_in}}
  <p>
    You must login to add a person.
  </p>
{{/unless}}

<h2>People</h2>

<ul>
  {{#each people}}
    <li>
      {{this.name}}
        <form action="/delete" method="POST" style="display: inline">
            <input type="submit" value="delete">
        </form>
      <ul>
        {{#if ../logged_in}}
          <li>
          </li>
        {{/if}}

        {{#each this.Tasks }}
          <li>
            {{this.task}}
              <form action="/people/{{this.id}}/tasks/delete" method="POST" style="display: inline">
                  <input type="submit" value="delete">
              </form>
          </li>
        {{/each}}
      </ul>
    </li>
  {{/each}}
</ul>
